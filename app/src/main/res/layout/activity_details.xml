<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:src="@drawable/bangladesh_img"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/countryImageD"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryNameD"
        android:text="Bangladesh"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/countryImageD"
        app:layout_constraintStart_toStartOf="@id/countryImageD"
        app:layout_constraintEnd_toEndOf="@id/countryImageD"
        android:layout_marginTop="20dp"
        />
    <ScrollView
        android:layout_width="350dp"
        android:layout_height="480dp"
        app:layout_constraintTop_toBottomOf="@id/countryNameD"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryLongDetails"
            android:text="@string/bangladesh_long_details"
            android:justificationMode="inter_word"
            android:lineHeight="28dp"
            />

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>